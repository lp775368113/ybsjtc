<mapper namespace="com.wondersgroup.permission.menu.dao.PerMenuMapper" >
  
  <select id="listUserMenu" resultType="com.wondersgroup.permission.menu.vo.PerMenu" parameterType="java.util.Map" >
    select distinct a.* from menu a,role_menu_permission b,user_role_permission c
	where c.roleid=b.roleid and b.menuid=a.id
	and c.userid=#{userid}
	and b.removed=0 
	and c.removed=0
	and a.removed=0
    order by a.PRIORITY
  </select>
   <select id="listMenu" resultType="com.wondersgroup.permission.menu.vo.PerMenu" >
    select 
    *
    from menu
    where removed = '0'
    order by PRIORITY
  </select>
